FROM python:3.11-slim

WORKDIR /app

# Install UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Install dependencies
COPY pyproject.toml uv.lock* ./
RUN uv sync --frozen --no-dev

# Make uv-installed packages available
ENV PATH="/app/.venv/bin:$PATH"

# Copy application code
COPY shared/ ./shared/
COPY agents/threat_agent.py ./agents/

# Create __init__.py files if needed
RUN touch shared/__init__.py && touch agents/__init__.py

# Create ADK web UI agent structure
RUN mkdir -p adk_web_ui/threat_agent && \
    echo '"""Threat Analysis Agent for ADK Web UI"""' > adk_web_ui/threat_agent/__init__.py && \
    cat > adk_web_ui/threat_agent/agent.py << 'EOF'
import os
import sys
sys.path.insert(0, '/app')
from agents.threat_agent import ThreatAnalysisAgent
project_id = os.getenv("GOOGLE_CLOUD_PROJECT", "kaggle-adk-capstone-secmon")
threat_agent = ThreatAnalysisAgent(project_id)
root_agent = threat_agent.agent
EOF

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
# Cloud Run will set PORT env var automatically (defaults to 8080)
# We'll read it in the application code

# Expose port (Cloud Run uses PORT env var, but we expose 8080 as default)
EXPOSE 8080

# Run the agent
# Use python from the venv explicitly
CMD ["/app/.venv/bin/python", "-m", "agents.threat_agent"]



