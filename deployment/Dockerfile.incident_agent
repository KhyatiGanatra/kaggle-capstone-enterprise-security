FROM python:3.11-slim

WORKDIR /app

# Install UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Install dependencies
COPY pyproject.toml uv.lock* ./
RUN uv sync --frozen --no-dev

# Make uv-installed packages available
ENV PATH="/app/.venv/bin:$PATH"

# Copy application code
COPY shared/ ./shared/
COPY agents/incident_agent.py ./agents/

# Create __init__.py files if needed
RUN touch shared/__init__.py && touch agents/__init__.py

# Set environment variables
ENV PYTHONUNBUFFERED=1
# Cloud Run will set PORT env var automatically (defaults to 8080)
# We'll read it in the application code

# Expose port (Cloud Run uses PORT env var, but we expose 8080 as default)
EXPOSE 8080

# Run the agent
CMD ["python", "-m", "agents.incident_agent"]



