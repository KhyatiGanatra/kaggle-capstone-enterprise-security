FROM python:3.11-slim

WORKDIR /app

# Install UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Install dependencies
COPY pyproject.toml uv.lock* ./
RUN uv sync --frozen --no-dev

# Make uv-installed packages available
ENV PATH="/app/.venv/bin:$PATH"

# Copy application code
COPY shared/ ./shared/
COPY agents/root_agent.py ./agents/

# Create __init__.py files if needed
RUN touch shared/__init__.py && touch agents/__init__.py

# Create ADK web UI agent structure
RUN mkdir -p adk_web_ui/root_agent && \
    echo '"""Root Orchestrator Agent for ADK Web UI"""' > adk_web_ui/root_agent/__init__.py && \
    printf 'import os\nimport sys\nsys.path.insert(0, '\''/app'\'')\nfrom agents.root_agent import RootOrchestratorAgent\nproject_id = os.getenv("GOOGLE_CLOUD_PROJECT", "kaggle-adk-capstone-secmon")\nlocation = os.getenv("VERTEX_AI_LOCATION", "us-central1")\norchestrator = RootOrchestratorAgent(project_id, location)\nroot_agent = orchestrator.agent\n' > adk_web_ui/root_agent/agent.py

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV PORT=8080

# Expose port
EXPOSE 8080

# Run the agent
# Use python from the venv explicitly
CMD ["/app/.venv/bin/python", "-m", "agents.root_agent"]






